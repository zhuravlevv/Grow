<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
       http://www.springframework.org/schema/beans/spring-beans.xsd">

    <bean id="departmentService" class="com.epam.service.impl.DepartmentServiceImpl">
        <constructor-arg ref="departmentDao"/>
    </bean>

    <bean id="departmentDtoService" class="com.epam.service.impl.DepartmentDtoServiceImpl">
        <constructor-arg ref="departmentDtoDao"/>
    </bean>

    <bean id="departmentDao" class="com.epam.service.impl.DepartmentDaoImpl">
        <constructor-arg ref="jdbcTemplate"/>
    </bean>

    <bean id="departmentDtoDao" class="com.epam.service.impl.DepartmentDtoDaoImpl">
        <constructor-arg ref="jdbcTemplate"/>
    </bean>

    <bean id="jdbcTemplate" class="org.springframework.jdbc.core.namedparam.NamedParameterJdbcTemplate">
        <constructor-arg ref="dataSource"/>
    </bean>
</beans>